<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">
    <changeSet author="skyglass" id="create-order-domain">
  
         <createTable tableName="USER">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="userPK"/>
            </column>
            <column name="username" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>   
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>  
             <column name="password" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>                                    
        </createTable>   
        
       <addUniqueConstraint columnNames="username" constraintName="unique_user_username" tableName="USER"/>  
    
        <createTable tableName="item">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="itemPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>   
        
       <addUniqueConstraint columnNames="name" constraintName="unique_item_name" tableName="item"/> 
        
        <createTable tableName="businessunit">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="businessUnitPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
       <addUniqueConstraint columnNames="name" constraintName="unique_businessunit_name" tableName="businessunit"/>         
        
         <createTable tableName="stock">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="stockPK"/>
            </column>
            <column name="item_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column> 
            <column name="businessunit_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>                       
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>                      
        </createTable>
        
 		<createIndex indexName="unique_stock_item_businessunit" tableName="stock" unique="true">
			<column name="item_uuid"/>
			<column name="businessunit_uuid"/>
		</createIndex>       
        
 	    <addForeignKeyConstraint baseColumnNames="item_uuid" baseTableName="stock" constraintName="stock_item_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="item" validate="true"/>  
  	    <addForeignKeyConstraint baseColumnNames="businessunit_uuid" baseTableName="stock" constraintName="stock_businessunit_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="businessunit" validate="true"/>  	          
                
 
        <createTable tableName="stockmovement">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="stockMovementPK"/>
            </column>
            <column name="from_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>  
            <column name="to_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>    
            <column name="item_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>  
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>  
            <column name="offset" type="BIGINT">
                <constraints nullable="false"/>
            </column> 
            <column name="createdat" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>

        </createTable>
        
 	    <addForeignKeyConstraint baseColumnNames="from_uuid" baseTableName="stockmovement" constraintName="stockmovement_from_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="businessunit" validate="true"/>  
  	    <addForeignKeyConstraint baseColumnNames="to_uuid" baseTableName="stockmovement" constraintName="stockmovement_to_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="businessunit" validate="true"/>  	    
  	    <addForeignKeyConstraint baseColumnNames="item_uuid" baseTableName="stockmovement" constraintName="stockmovement_item_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="item" validate="true"/> 
  	    
        <createTable tableName="stockparameter">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="stockParameterPK"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>                                                            

        </createTable>  	       
  	    
  	   <createTable tableName="STOCKMOVEMENT_STOCKPARAMETER">
            <column name="STOCKMOVEMENT_UUID" type="NVARCHAR(255)">
                <constraints nullable="false" primaryKey="true" />
            </column>
            <column name="PARAMETERS_UUID" type="NVARCHAR(255)">
                <constraints nullable="false" primaryKey="true" />
            </column>
        </createTable>  
        
        <addForeignKeyConstraint baseColumnNames="stockmovement_uuid" baseTableName="stockmovement_stockparameter" constraintName="stockmovement_stockparameter_stockmovement_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="stockmovement" validate="true"/>  
  	    <addForeignKeyConstraint baseColumnNames="parameters_uuid" baseTableName="stockmovement_stockparameter" constraintName="stockmovement_stockparameter_parameters_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="stockparameter" validate="true"/>  
  	    
  	    
        <createTable tableName="stockhistory">
            <column name="uuid" type="VARCHAR(255)">
                <constraints primaryKey="true" primaryKeyName="stockHistoryPK"/>
            </column>
            <column name="businessunit_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>             
            <column name="item_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column> 
            <column name="amount" type="DOUBLE">
                <constraints nullable="false"/>
            </column>                                         
            <column name="startdate" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>  
            <column name="enddate" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>                                           

        </createTable>
        
 	    <addForeignKeyConstraint baseColumnNames="businessunit_uuid" baseTableName="stockhistory" constraintName="stockmovement_businessunit_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="businessunit" validate="true"/>      
  	    <addForeignKeyConstraint baseColumnNames="item_uuid" baseTableName="stockhistory" constraintName="stockhistory_item_uuid_fk" deferrable="false" initiallyDeferred="false" referencedColumnNames="uuid" referencedTableName="item" validate="true"/>   
  	    
  		<createTable tableName="keylock">
			<column name="key" type="NVARCHAR(255)">
                <constraints unique = "true"/>
            </column>
		</createTable> 	  
		
  		<createTable tableName="keyoffset">
			<column name="key" type="NVARCHAR(255)">
                <constraints unique = "true"/>
            </column>
            <column name="offset" type="BIGINT">
                <constraints nullable="false"/>
            </column> 
		</createTable>		  		  	        

	</changeSet>
	
</databaseChangeLog>
